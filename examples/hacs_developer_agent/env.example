# LangGraph Platform Environment Variables
# These will be loaded by the LangGraph platform and passed as secrets to runnables

# Required API keys (passed as secrets with __ prefix)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database configuration for HACS admin operations
DATABASE_URL=postgresql://hacs:hacs_dev@localhost:5432/hacs

# HACS MCP server configuration
HACS_MCP_SERVER_URL=http://localhost:8000

# LangSmith tracing (optional) 
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=hacs-developer-agent

# Agent configuration
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=true 