# HACS Deep Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# === AI Model Configuration ===
# Choose one or both providers based on your preference

# Anthropic Claude (Recommended for healthcare applications)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenAI GPT Models (Alternative)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# === HACS Configuration ===
# Healthcare Actor Configuration
HACS_DEFAULT_ACTOR_NAME="Healthcare AI Agent"
HACS_DEFAULT_ACTOR_ROLE="SYSTEM"
HACS_ORGANIZATION="Your Healthcare Organization"

# Healthcare Environment Settings
HEALTHCARE_ENVIRONMENT="development"  # development, staging, production
HEALTHCARE_SYSTEM_NAME="Your Health System"

# === Database Configuration (Optional) ===
# Uncomment and configure if using persistent storage
# DATABASE_URL=postgresql://username:password@localhost:5432/hacs_dev
# VECTOR_STORE=pgvector

# === LangGraph Configuration ===
# LangGraph Studio and development settings
LANGSMITH_TRACING=false
LANGSMITH_PROJECT="hacs-deep-agent"
# LANGSMITH_API_KEY=your-langsmith-api-key-here

# === Healthcare Compliance Settings ===
# HIPAA and healthcare compliance configuration
HIPAA_COMPLIANT=true
AUDIT_LOGGING_ENABLED=true
PHI_ENCRYPTION_ENABLED=true

# === Clinical Configuration ===
# Default clinical workflow settings
DEFAULT_CLINICAL_WORKFLOW_TIMEOUT=300  # seconds
CLINICAL_SAFETY_CHECKS_ENABLED=true
EVIDENCE_BASED_RECOMMENDATIONS=true

# === Quality Measures Configuration ===
# Healthcare quality measurement settings
QUALITY_MEASURES_ENABLED=true
DEFAULT_QUALITY_MEASURE_SET="HEDIS"  # HEDIS, CMS, MIPS, CUSTOM

# === FHIR Integration Settings ===
# Healthcare interoperability configuration
FHIR_VERSION="R4"  # R4, R5
FHIR_COMPLIANCE_STRICT=true
TERMINOLOGY_VALIDATION=true

# === Development Settings ===
# Development and debugging configuration
DEBUG=false
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
HEALTHCARE_AGENT_VERBOSE=false

# === External Integrations (Optional) ===
# Uncomment and configure for external healthcare systems
# EHR_API_ENDPOINT=https://your-ehr-system.com/api
# EHR_API_KEY=your-ehr-api-key
# HIE_ENDPOINT=https://your-hie.com/api
# TERMINOLOGY_SERVICE_URL=https://tx.fhir.org
